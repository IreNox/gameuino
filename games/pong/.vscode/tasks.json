{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Build Assets",
			"type": "shell",
			"command": "${workspaceFolder}\\..\\..\\bin\\asset_builder.exe ${workspaceFolder}\\..\\..\\assets\\pong ${workspaceFolder}",
			"problemMatcher": []
		},
        {
            "label": "Build",
            "type": "shell",
            "command": "arduino_debug.exe --pref sketchbook.path=${workspaceFolder}\\..\\.. --pref build.path=${workspaceFolder}\\build --board arduino:avr:mega --verify ${workspaceFolder}\\${workspaceFolderBasename}.ino",
            "problemMatcher": [
                "$gcc"
			],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}